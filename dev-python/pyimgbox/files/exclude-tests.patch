Subject: [PATCH] pyproject.toml: Exclude tests

--- a/pyproject.toml
+++ b/pyproject.toml
@@ -46,11 +46,8 @@ Changelog = "https://codeberg.org/plotski/pyimgbox/raw/branch/master/NEWS"
 requires = ["setuptools"]
 build-backend = "setuptools.build_meta"
 
-# For some unknown reason, we need to specify explicity to scan the project
-# directory with default parameters or setuptools gets confused about
-# directories like "docs" or "venv".
-[tool.setuptools.packages]
-find = {}
+[tool.setuptools.packages.find]
+include = ["pyimgbox*"]
 
 [tool.setuptools.dynamic]
 version = {attr = "pyimgbox.__version__"}
